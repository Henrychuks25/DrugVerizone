@model ManufacturerViewDto
@{
    ViewData["Title"] = Model.Name;
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

}



<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                @*<h3> @ViewData["Title"]</h3>*@
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-area="" asp-controller="Admin" asp-action="Dashboard">Dashboard</a></li>
                    <li class="breadcrumb-item"><a asp-area="" asp-controller="Manufacturers" asp-action="Index" data-toggle="link">Manufacturer</a></li>
                    <li class="breadcrumb-item active">@ViewData["Title"]</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">


    <div class="row">
        <div class="col-12">
            <!-- /.card -->

            <div class="card card-primary card-outline card-outline-tabs">
                <div class="card-header p-0 border-bottom-0">
                    <ul class="nav nav-tabs" id="custom-tabs-three-tab" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active disabled" id="custom-tabs-three-home-tab" data-toggle="pill" role="tab" aria-controls="custom-tabs-three-home" aria-selected="true">
                                <b>@ViewData["Title"]</b> 
                            </a>
                        </li>
                    </ul>
                </div>

                <div class="card-body">
                    <div class="row">
                        <!-- accepted payments column -->
                        <div class="col-md-5 border">

                            <h4 class="mt-2" style="font-weight: 100">Available Details:</h4>

                            <table class="table table-striped table-borderless">

                                <tbody>
                                    <tr>
                                        <td class="p-0">
                                            <dl>
                                                <dt>Company Name</dt>
                                                <dd>
                                                    @Model.Name<br />

                                                </dd>
                                            </dl>
                                        </td>
                                        <td class="p-0">
                                            <dl>
                                                <dt>Location</dt>
                                                <dd>
                                                    @Model.Address<br />

                                                </dd>
                                            </dl>
                                        </td>
                                        <td class="p-0">
                                            <dl>
                                                <dt>Email Address</dt>
                                                <dd>
                                                    @Model.email<br />

                                                </dd>
                                            </dl>
                                        </td>

                                        <td class="p-0">
                                            <dl>
                                                <dt>Company Phone Number</dt>
                                                <dd>
                                                    @Model.PhoneNo<br />

                                                </dd>
                                            </dl>
                                        </td>

                                        
                                    </tr>
                                    





                                </tbody>
                            </table>

                        </div>
                        <!-- /.col -->
                        <div class="col-md-7">


                            <div class="clearfix">

                                <div class="float-right">

                                    @*<a asp-area="" asp-controller="SchoolCategories" asp-action="Audit" asp-route-id="@Model.Id" class="btn btn-light">
                                            <i class="fas fa-binoculars"></i>
                                            Audit Trail
                                        </a>*@
                                    <a asp-area="" asp-controller="SchoolCategories" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                                        <i class="fas fa-trash-alt"></i>
                                        Delete Record
                                    </a>

                                </div>

                            </div>

                            <h4 style="font-weight: 100;">Drugs Produced by @ViewData["Title"]:</h4>
                            <table id="datatable-1" class="table table-bordered table-striped table-responsive-lg table-responsive-md table-responsive-xl" role="grid" aria-describedby="example1_info">
                                <thead>
                                    <tr role="row">
                                        <td> Name</td>
                                        <td>NafDac No</td>
                                        <td>Man Date</td>
                                        <td>Expiry Date</td>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.Drugs)
                                    {
                                        <tr role="row">
                                            <td>@item.Name</td>
                                            <td>@item.NafdacNo</td>
                                            <td>@item.ManFactureDate</td>
                                            <td>@item.ExpiryDate</td>

                                        </tr>
                                    }

                                </tbody>
                            </table>


                            
                        </div>
                        <!-- /.col -->
                    </div>
                </div>
                <!-- /.card -->
            </div>
            <!-- /.card -->
        </div>
        <!-- /.col -->
    </div>
</section>
<!-- /.content -->
