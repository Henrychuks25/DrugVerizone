@model IEnumerable<Drugs>

    @{
        ViewData["Title"] = "Search";
        Layout = "~/Views/Shared/_LoginLayout.cshtml";
    }


    <div class="container mt-4">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Result of your search</h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <table class="table table-bordered">
                            <thead>
                                <tr>

                                    <th>
                                        Drug Name
                                    </th>
                                    <th>
                                        @*@Html.DisplayNameFor(model => model.NafdacNo)*@
                                        NAFDAC No
                                    </th>

                                    <th>
                                        @*@Html.DisplayNameFor(model => model.UniqueCode)*@

                                        Unique Code
                                    </th>
                                    <th>
                                        @*@Html.DisplayNameFor(model => model.Manufacturer.Name)*@

                                        Manufacturer Name
                                    </th>

                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Count() == 0)
                                {
                                    <tr>
                                        <td colspan="4" style="color:red">
                                            No Record Found.  This drug is fake. Kindly report by filling this
                                            <a asp-controller="Complaints" asp-action="Create"> form. Ensure to include the Drug Code in the description box.</a>
                                        </td>

                                    </tr>
                                }
                                else
                                {
                                    foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.Name</td>
                                            <td>@item.NafdacNo</td>
                                            <td>@item.UniqueCode</td>
                                            <td>@item.Manufacturer.Name</td>

                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>



                </div>
            </div>
        </div>



    </div>
  