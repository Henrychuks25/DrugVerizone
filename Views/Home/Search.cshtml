@model IEnumerable<Drugs>

    @{
        ViewData["Title"] = "Search";
        Layout = "~/Views/Shared/_AdminLayout.cshtml";
    }


    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Result of your search</h3>
                </div>
                <!-- /.card-header -->
                <div class="card-body">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                
                                <th>@Html.DisplayNameFor(model => model.Name)</th>
                                <th>
                                    @Html.DisplayNameFor(model => model.NafdacNo)
                                </th>

                                <th>
                                    @Html.DisplayNameFor(model => model.UniqueCode)
                                </th>
                                
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Count() == 0)
                            {
                                <tr>
                                    <td colspan="4" style="color:red">No Record Found</td>
                                </tr>
                            }
                            else
                            {
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Name</td>
                                        <td>@item.NafdacNo</td>
                                        <td>@item.UniqueCode</td>

                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>



               </div>
            </div>
        </div>


