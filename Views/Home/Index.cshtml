@{

    ViewData["Title"] = "Drug Verizone System";
    Layout = "~/Views/Shared/_LandingLayout.cshtml";
}

<body>
    <!-- Begin wrapper -->
    <div class="wrapper">
        <!-- Begin Top Navbar -->
        <header id="top" class="top_navbar">
            <div class="container">
                <nav class="navbar navbar-expand-lg navbar-light">
                    <a class="navbar-brand" href="/">

                        <img src="~/images/logo.png" alt="drug logo" />
                    </a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon">
                            <i class="fa fa-bars"></i>
                        </span>
                    </button>
                    <div class="collapse navbar-collapse justify-content-end" id="navbarNavDropdown">
                        <ul class="navbar-nav">
                            <li class="nav-item active">
                                <a class="nav-link" href="/">Home <span class="sr-only">(current)</span></a>
                            </li>
                   
                           
                        </ul>
                        <ul class="nav navbar-nav navbar-right">
                            <li><a class=" btn btn-primary my-2 my-sm-0 my-account-btn" asp-controller="Accounts" asp-action="Login">Login</a></li>
                        </ul>
                    </div>
                </nav>
            </div>
        </header>
        <!-- End Top Navbar -->
        <!-- Begin Banner -->
        <div class="banner">
            <div class="container">
                <div class="row">
                    <div class="col-md-6 col-lg-6 col-xl-5">
                        <div class="showcase clearfix">
                            <h1>Food-DrugVerify</h1>
                            <h2>- The Online Platform to verify drugs</h2>
                            <p>Developed to be a drug bank, we provide reliable data about drugs</p>
                        </div>
                    </div>
                    <div class="col-md-6 col-lg-6 col-xl-5">
                        <div class="pharmachy-thumb">
                            <img class="rounded-0" src="~/images/drugs.jpg" width="30" height="30" alt="" />


                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- End Banner -->
        <!-- Begin How It Work -->
        <section class="how-it-work-section">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="how-it-work">
                            <h2>How it works</h2>
                            <p>Verify Drugs in these Easy Steps </p>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="dashed-border"></div>
                    <div class="col-md-6">
                        <div class="how-it-work-step-box">
                            <div class="step-rounded">
                                <p>
                                    Step<br>
                                    <span>01</span>
                                </p>
                            </div>
                            <div class="icon-box">
                                <img src="http://webinfoways.co.in/projects/planex-pharmacy/images/icon-01.png" alt="" />
                            </div>
                            <h2>Enter the Drug Code</h2>
                            <p>Use the Drug search form to enter Drug code</p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="how-it-work-step-box">
                            <div class="step-rounded">
                                <p>
                                    Step<br>
                                    <span>02</span>
                                </p>
                            </div>
                            <div class="icon-box">
                                <img src="http://webinfoways.co.in/projects/planex-pharmacy/images/icon-02.png" alt="" />
                            </div>
                            <h2>Search Your Entry</h2>
                            <p>Click Search and wait for result</p>
                        </div>
                    </div>
                    
                </div>
            </div>
        </section>
        <!-- End How It Work -->
        <!-- Begin Pharmachy Thumb -->
        <div class="pharmachy-box-gallery">
            <div class="container">
                <div class="row">
                   
                    <div class="col-sm-6 col-md-12 col-lg-12">
                        <div class="form-box">
                            <form asp-controller="Home" asp-action="Search" method="get">
                                <div class="align-items-center">
                                    <div class="col-form-box">
                                        <div class="input-group mb-2">
                                            <div class="input-group-addon"> </div>
                                            <input type="text" class="form-control" name="searchString" id="name" placeholder="Enter Drug Code">
                                        </div>
                                    </div>
                                    
                                    
                                    <div class="col-form-box">
                                        <button type="submit" class="btn btn-block btn-send">Search</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                   
                </div>

               
            </div>
        </div>
        <!-- End Pharmachy Thumb --> <!-- Begin Pharmachy Thumb -->
        <div class="pharmachy-box-gallery">
            <div class="container">
                <div class="row">
                    <div class="col-sm-6 col-md-6 col-lg-3">
                        <div class="pharmachy-thumb">
                            <img class="rounded-0" src="~/images/drugs.jpg" width="30" height="30" alt="" />


                        </div>
                    </div>
                    <div class="col-sm-6 col-md-6 col-lg-3">
                        <div class="pharmachy-thumb">
                            <img class="rounded-0" src="~/images/drug3.jpg" width="30" height="30" alt="" />

                        </div>
                    </div>
                    <div class="col-sm-6 col-md-6 col-lg-3">
                        <div class="pharmachy-thumb">
                            <img class="rounded-0" src="~/images/drug2.jpg" width="30" height="30" alt="" />

                        </div>
                    </div>
                    <div class="col-sm-6 col-md-6 col-lg-3">
                        <div class="pharmachy-thumb">
                            <img class="rounded-0" src="~/images/drug4.png" width="30" height="30" alt="" />

                        </div>
                    </div>
                </div>

                <!-- Begin About Planex Pharmacy -->
                <div class="row">
                    <div class="col-md-12">
                        <div class="about-planex-pharmacy">
                            <h2>About Us</h2>
                            <p>
                                We provide up to date information about drugs and their manufacturers. We have being in existence for over a decades now.
                            </p>
                           
                        </div>
                    </div>
                </div>
                <!-- End About Planex Pharmacy -->
            </div>
        </div>
        <!-- End Pharmachy Thumb -->
       
    </div>


</body>

